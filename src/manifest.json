{
  "manifest_version": 2,
  "name": "Package Hunter",
  "description": "Make you easy when you search package on pypi",
  "version": "1.0.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Luoo"
  },
  "content_scripts": [
    {
      "matches": ["*://pypi.org/search/?q=*"],
      "css": ["styles.css"],
      "js": ["app.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "identity",
    "https://pypi.org/*",
    "https://github.com/*"
  ],
  "oauth2": {
    "client_id": "e53dc3c347023cc17726",
    "scopes":[
      "https://github.com/login/oauth/authorize"
    ]
  }
}
